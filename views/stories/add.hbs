<h3 class="colorWhite">Add Stories</h3>
<div class="row">
    <form action="/stories" method="post">
        <div class="row">
            <div class="input-field colorWhite">
                <input class="colorWhite" id="title" name="title" type="text"/>
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field" >
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5 class="colorWhite" >Tell Us Your Story</h5>
                <textarea name="body" id="body" cols="30" rows="10"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>


    </form>

</div>