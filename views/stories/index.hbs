<h2 class="colorWhite">Public Stories</h2>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id }}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 100)}}</p>
                    <br>
                    <div class="chip">
                        <img src={{user.image}}>
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn green">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p class="colorWhite" >No stories to display</p>
    {{/each}}


</div>